#Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA  02111-1307, USA.
#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jharris@karoshi.org.uk
#aball@karoshi.org.uk
#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
[ $LOG_DATE'null' = null ] && exit

SSHWARNMSG="SSH is not enabled for this server."

########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/linux_client_view_remove_list3_cgi
then
echo `date`: linux_client_view_remove_list - No admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/linux_client_view_remove_list3_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/linux_client_view_remove_list3.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $linux_client_view_remove_list3_cgi'check' ]
then
echo `date`: linux_client_view_remove_list - Incorrect admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: linux_client_view_remove_list - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | cut -s -d: -f2`
REMOTE_MD5=`echo $* | cut -s -d: -f3`
LINUXVERSION=`echo $* | cut -s -d: -f4`
REMOVEARRAY=( `echo $* | cut -s -d: -f5- | sed 's/:/ /g'` )
########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ]
then
echo `date`: linux_client_view_remove_list - Not called by linux_client_view_remove_list2.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: linux_client_view_remove_list - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: linux_client_view_remove_list - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $LINUXVERSION'null' = null ]
then
echo `date`: linux_client_view_remove_list - Blank linuxversion >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ]
then
echo `date`: linux_client_view_remove_list - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ $REMOVEARRAY'null' = null ]
then
echo `date`: linux_client_view_remove_list - No sites chosen by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

REMOVECOUNT=`echo ${#REMOVEARRAY[@]}`
COUNTER=1
#Log event
while [ $COUNTER -lt $REMOVECOUNT ]
do
SOFTWARE=`echo ${REMOVEARRAY[$COUNTER]}`
echo `date`: linux_client_view_remove_list - removing $SOFTWARE by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
let COUNTER=$COUNTER+1
done

COUNTER=1
while [ $COUNTER -lt $REMOVECOUNT ]
do
#Delete software from list
SOFTWARE=`echo ${REMOVEARRAY[$COUNTER]}`
#Get line number of software
SOFTWARELINENUMBER=`grep -n ^$SOFTWARE /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/remove_list | cut -d: -f1`
if [ $SOFTWARELINENUMBER"null" != null ]
then
sed -i $SOFTWARELINENUMBER"d" /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/remove_list
fi
let COUNTER=$COUNTER+1
done
#Remove blank lines
sed -i '/^$/d' /var/lib/samba/netlogon/linuxclient/$LINUXVERSION/remove_list
exit
