#but WITHOUT ANY WARRANTY; without even the implied warranty of
#MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#GNU General Public License for more details.
#
#You should have received a copy of the GNU General Public License
#along with this program; if not, write to the Free Software
#Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA  02111-1307, USA.
#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jharris@karoshi.org.uk
#aball@karoshi.org.uk
#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
[ $LOG_DATE'null' = null ] && exit
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/dg_wildcard_ban_cgi
then
echo `date`: dg_wildcard_ban - No Admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/dg_wildcard_ban_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/dg_wildcard_ban.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $dg_wildcard_ban_cgi'check' ]
then
echo `date`: dg_wildcard_ban - Incorrect Admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if ! test -f /opt/karoshi/web_controls/checksums/tech_checksums/dg_wildcard_ban_cgi
then
echo `date`: dg_wildcard_ban - No Tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/tech_checksums/dg_wildcard_ban_cgi
MD5SUM2=`md5sum /var/www/cgi-bin_karoshi/tech/dg_wildcard_ban.cgi | cut -d' ' -f1`
[ $MD5SUM2'null' = null ] && MD5SUM2=not_set
if [ $MD5SUM2'check' != $dg_wildcard_ban_cgi'check' ]
then
echo `date`: dg_wildcard_ban - Incorrect Tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: dg_wildcard_ban - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | cut -s -d: -f2`
REMOTE_MD5=`echo $* | cut -s -d: -f3`
WILDCARD=`echo $* | cut -s -d: -f4`
########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ] && [ $REMOTE_MD5'check' != $MD5SUM2'check' ]
then
echo `date`: dg_wildcard_ban - Not called by dg_wildcard_ban.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: dg_wildcard_ban - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: dg_wildcard_ban - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $WILDCARD'null' = null ]
then
echo `date`: dg_wildcard_ban - Blank wildcard by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
fi
if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ] && [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_tech` != 1 ]
then
echo `date`: dg_wildcard_ban - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
########################
#Add the wildcard
########################
#Get squid server name
[ ! -f /opt/karoshi/server_network/proxyserver ] && exit 101
PROXYSERVER=`sed -n 1,1p /opt/karoshi/server_network/proxyserver`

if [ $PROXYSERVER != $HOSTNAME ]
then
ssh -x -o PasswordAuthentication=no $PROXYSERVER '
touch /etc/squid/banned.list
WILDCARDCOUNT=`grep -c -w ^'$WILDCARD' /etc/squid/banned.list`
if [ $WILDCARDCOUNT = 0 ]
then
echo '$WILDCARD' >> /etc/squid/banned.list
sort /etc/squid/banned.list > /etc/squid/banned.list1
rm -f /etc/squid/banned.list
mv /etc/squid/banned.list1 /etc/squid/banned.list
touch /etc/dansguardian/activate_changes
else
exit 101
fi
'
else
touch /etc/squid/banned.list
WILDCARDCOUNT=`grep -c -w ^$WILDCARD /etc/squid/banned.list`
if [ $WILDCARDCOUNT = 0 ]
then
echo $WILDCARD >> /etc/squid/banned.list
sort /etc/squid/banned.list > /etc/squid/banned.list1
rm -f /etc/squid/banned.list
mv /etc/squid/banned.list1 /etc/squid/banned.list
touch /etc/dansguardian/activate_changes
else
exit 101
fi
fi
echo `date`: dg_wildcard_ban - $WILDCARD added by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
