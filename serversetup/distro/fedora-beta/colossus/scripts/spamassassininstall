#!/bin/bash
#softwareinstall
source /opt/karoshi/serversetup/variables/distro
source /opt/karoshi/serversetup/distro/$DISTROCHOICE/colossus/software

[ -d $HOME/.tempdata ] || mkdir $HOME/.tempdata
SPAMASSASSINSTATUS=`rpm -q spamassassin | cut -d- -f1`
if [ "$SPAMASSASSINSTATUS" != spamassassin ]
then
xterm -geometry 100x20 -bg white -fg black -e yum -y install $SPAMSOFTWARE
fi
