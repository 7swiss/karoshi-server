# default: off
# description: The POP3S service allows remote users to access their mail \
#              using an POP3 client with SSL support such as fetchmail.
service pop3s
{
	socket_type		= stream
	wait			= no
	user			= root
	server			= /usr/sbin/ipop3sd
	log_on_success		+= USERID
	log_on_failure		+= USERID
	disable			= no
}
