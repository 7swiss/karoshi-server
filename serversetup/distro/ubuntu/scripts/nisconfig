#!/bin/bash
#ypservconfig
source /opt/karoshi/serversetup/variables/tcpip
echo NISSERVER=false > /etc/default/nis
echo NISCLIENT=false >> /etc/default/nis
echo YPPWDDIR=/etc >> /etc/default/nis
echo YPCHANGEOK=chsh >> /etc/default/nis
echo NISMASTER= >> /etc/default/nis
echo YPSERVARGS= >> /etc/default/nis
echo YPBINDARGS= >> /etc/default/nis
echo YPPASSWDDARGS= >> /etc/default/nis
echo YPXFRDARGS= >> /etc/default/nis

echo NISDOMAIN=$YPDOMAIN > /etc/defaultdomain
