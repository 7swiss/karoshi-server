#!/bin/bash
source /opt/karoshi/serversetup/variables/distro

#Enable winbind modules
ln -s /usr/local/lib/libnss_winbind.so.2 /lib/libnss_winbind.so
ln -s /lib/libnss_winbind.so /lib/libnss_winbind.so.2

#Modify nsswitch.conf
cp -f /opt/karoshi/serversetup/distro/$DISTROCHOICE/pdc/configfiles/nsswitch.conf /etc/

#Modify pam.d config files
cp -f /opt/karoshi/serversetup/distro/$DISTROCHOICE/pdc/configfiles/pam.d/* /etc/pam.d/

#Enable pam_winbind
ln -s /usr/local/lib/security/pam_winbind.so /lib/security


