#!/usr/bin/expect -f
set kohaversion [lrange $argv 0 0]
set timeout -1
cd /opt/karoshi/serversetup/modules/koha/$kohaversion/
spawn perl Makefile.PL
match_max 100000
sleep 1
expect "*?dev*"
send -- "standard\r"
sleep 1
expect "*?koha*"
send -- "koha\r"
sleep 1
expect "*?koha*"
send -- "koha\r"
sleep 1
expect "*?koha*"
send -- "koha\r"
sleep 1
expect "*?mysql*"
send -- "mysql\r"
sleep 1
expect "*?DMBS*"
send -- "3306\r"
sleep 1
expect "*?localhost*"
send -- "localhost\r"
send -- "\r"
expect eof
