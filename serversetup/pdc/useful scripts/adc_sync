#!/bin/bash
if [ -d /opt/karoshi/server_network/zones/internal/additional_domain_controllers ]
then
if [ `ls -1 /opt/karoshi/server_network/zones/internal/additional_domain_controllers | wc -l` -gt 0 ]
then
for ADSERVERS in /opt/karoshi/server_network/zones/internal/additional_domain_controllers/*
do
ADSERVER=`basename $ADSERVERS`
echo Syncing $ADSERVER
#Sync applications share
unison -ignorearchives -owner -group -batch /home/applications ssh://$ADSERVER//home/applications
#Sync subjects
unison -ignorearchives -owner -group -batch /home/subjects ssh://$ADSERVER//home/subjects
#Sync staffshare
unison -ignorearchives -owner -group -batch /home/staffshare ssh://$ADSERVER//home/staffshare
#Sync users home areas
unison -ignorearchives -owner -group -batch /home/users/ ssh://$ADSERVER//home/users

#Sync netlogon
unison -ignorearchives -owner -group -batch /var/lib/samba/netlogon ssh://$ADSERVER//var/lib/samba/netlogon
done
fi
fi
